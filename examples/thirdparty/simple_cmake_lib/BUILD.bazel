load("@rules_cc//cc:defs.bzl", "cc_binary", "cc_library")

# gazelle:cmake_source @simple_cmake_lib

# This BUILD.bazel file demonstrates the cmake_source directive usage.
# When gazelle runs, it will populate this file with cc_library and cc_binary
# rules generated from the CMakeLists.txt found in the @simple_cmake_lib external repository.

cc_binary(
    name = "simple_app",
    srcs = ["@simple_cmake_lib//:src/main.cpp"],
    copts = [
        "-iquote",
        "external/+_repo_rules2+simple_cmake_lib/include",
    ],
)

cc_library(
    name = "simple_lib",
    srcs = [
        "@simple_cmake_lib//:src/simple.cpp",
        "@simple_cmake_lib//:src/utils.cpp",
    ],
    copts = [
        "-iquote",
        "external/+_repo_rules2+simple_cmake_lib/include",
    ],
)
