cmake_configure_file(
    name = "config_h_generated",
    out = "config.h",
    cmake_binary = "//:cmake",
    cmake_source_dir = "@librdkafka",
    cmake_source_files = [
        "@librdkafka//:srcs",
    ],
    defines = {
        "RDKAFKA_BUILD_STATIC": "ON",
        "RDKAFKA_BUILD_TESTS": "OFF",
        "RDKAFKA_BUILD_EXAMPLES": "OFF",
        "WITH_ZSTD": "OFF",
        "WITH_SSL": "OFF",
        "WITH_SASL_SCRAM": "ON",
        "WITH_SASL_OAUTHBEARER": "ON",
        "WITH_SASL": "OFF",
        "ENABLE_LZ4_EXT": "OFF",
        "WITH_LIBDL": "OFF",
    },
    generated_file_path = "generated/config.h",
)

# Create a win32_config.h alternative to bypass the ../config.h include
genrule(
    name = "win32_config_h",
    srcs = [":config_h_generated"],
    outs = ["win32_config.h"],
    cmd = """
        cat > $@ << 'EOF'
